extends ../layout

block content
  h1 Manage Contact Requests

  table
    thead
      tr
        th Name
        th Email
        th Subject
        th Message
        th Contacted
        th Actions
    tbody
      each contact in contacts
        tr
          td= contact.name
          td= contact.email
          td= contact.subject
          td= contact.message
          td= contact.contacted ? 'Yes' : 'No'
          td
            form(action=`/admin/contacts/${contact.id}/contacted`, method="POST")
              button(type="submit") Mark as Contacted
            form(action=`/admin/contacts/${contact.id}/delete`, method="POST")
              button(type="submit") Delete
